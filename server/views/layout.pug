doctype html
html
  head
    meta(name="viewport", content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1")
    title= title
    link(rel="shortcut icon", href="/favicon.ico")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto")
    link(rel="stylesheet", href="/font-awesome/css/font-awesome.min.css")
    link(rel="stylesheet", href="/stylesheets/style.css")
    script.
      var __applicationConfig = (function() {
        var accessToken = "#{token}";
        var serverDataFolderId = "#{settings.getServerDataFolderId()}";
        var userDataFolderId = "#{userDataFolderId}";

        var clearAccessToken = function() {
          accessToken = "";
        };

        var getAccessToken = function() {
          return accessToken;
        };

        var getServerDataFolderId = function() {
          return serverDataFolderId;
        };

        var getUserDataFolderId = function() {
          return userDataFolderId;
        };

        return {
          clearAccessToken: clearAccessToken,
          getAccessToken: getAccessToken,
          getServerDataFolderId: getServerDataFolderId,
          getUserDataFolderId: getUserDataFolderId,
        };
      }());
    script(src="/jspm_packages/system.js")
    script(src="/jspm.config.js")
    //- script(src="/dev-deps.js")
    //- script(src="/build.js")
  body
    block content
    script.
      SystemJS.import('systemjs-hot-reloader')
        .then((connect) => {
          connect();
          System.import('/src/main.js');
        });
        
